<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditFarmersDetails">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/profile"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"

                card_view:cardElevation="@dimen/cardElevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="6dp"
                    android:orientation="vertical">

                    <TextView style="@style/Categories"
                        android:id="@+id/label_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/personal_profile"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:layout_marginTop="15dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:rotation="180"
                        android:background="@android:color/holo_green_light"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <ImageView
                            android:layout_gravity="center"
                            android:id="@+id/edit_farmer_image_snap"
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/ic_username"
                            />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Name:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_names1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Age:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_age1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="120"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FIN:"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:id="@+id/edit_fin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="120"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_household"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_household_size1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"/>
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone Number:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_phone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="phone"
                            android:maxLength="11"
                            android:imeOptions="actionNext"
                            android:hint="@string/label_phone_number"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gender:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_gender1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:inputType="textCapSentences"
                            android:layout_margin="5dp"
                             />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Marital Status:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_marital_status1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="State:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_sp_lga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp" />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/qualification"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_etQualification1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>


                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_lga"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_etLGA1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="text"/>

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_ward"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_etWard1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>


                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_village"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_etVillage1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>


                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cvFarm"
                android:layout_below="@+id/profile"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="@dimen/cardElevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="6dp">

                    <TextView style="@style/Categories"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/label_farm_profile"
                        android:text="@string/farm_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:layout_marginTop="@dimen/text_margin" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:rotation="180"
                        android:background="@android:color/holo_green_light"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_farmer_type"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:imeOptions="actionNext"
                            android:id="@+id/edit_new_or_existing1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"/>
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_farm_size"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_farmsize1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="100"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                           />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_farm_location"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_farmLocation1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"/>


                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_dist_to_market"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:imeOptions="actionNext"
                            android:id="@+id/edit_distance_to_market1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="number"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_avg_income_farming"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_avg_income_farming1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="text"
                            android:imeOptions="actionNext"/>

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_avg_income_non_farming"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_avg_income_non_farm1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_major_crops"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_major_crops1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            />
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_major_livestock"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_major_livestock1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                           />

                    </LinearLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cvTraining"
                android:layout_below="@+id/cvFinance"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="@dimen/cardElevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="6dp">

                    <TextView style="@style/Categories"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/label_training_profile1"
                        android:text="@string/training"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="@dimen/text_margin" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:rotation="180"
                        android:background="@android:color/holo_green_light"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/anytraining"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_et_any_training1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"/>

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_training_type"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_et_training_type1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:imeOptions="actionNext"
                            android:inputType="textCapSentences"
                            />


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvFinance"
                android:layout_below="@+id/cvTraining"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="@dimen/cardElevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="6dp">

                    <TextView style="@style/Categories"
                        android:id="@+id/label_income_profile1"
                        android:text="@string/corp_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="@dimen/text_margin" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:rotation="180"
                        android:background="@android:color/holo_green_light"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cooperative Name:"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_cooperative_membership1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"/>
                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location of Cooperative:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_cooperative_location1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionNext"
                            />

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cooperative Chairman:"
                            android:textSize="12sp"
                            />

                        <EditText
                            android:id="@+id/edit_etChairmanName1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapSentences"
                            android:imeOptions="actionDone"
                           />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cvBank"
                android:layout_below="@+id/cvFinance"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardElevation="@dimen/cardElevation">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="6dp">

                    <TextView style="@style/Categories"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/label_bank_profile1"
                        android:text="@string/bank_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:imeOptions="actionNext"
                        android:layout_marginTop="@dimen/text_margin" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:rotation="180"
                        android:background="@android:color/holo_green_light"/>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Name:"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_etBank_name1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:background="@drawable/border"
                            android:layout_margin="5dp"
                            android:inputType="textCapWords"
                            android:imeOptions="actionNext"
                            android:hint="@string/bank_name"/>

                        <TextView
                            android:textColor="@color/color_green"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Name:"
                            android:textSize="12sp"
                            />
                        <EditText
                            android:id="@+id/edit_etAccount_name1"
